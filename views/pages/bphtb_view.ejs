<html lang="en">
<%-include('../partials/head')%>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Detail BPHTB</h2>
            <a href="/admin/dashboard" class="btn btn-secondary">‚Üê Kembali</a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                    <tr>
                        <th scope="row">Produk</th>
                        <td><%= bphtb?.produk || '-' %></td>
                    </tr>
                    <tr>
                        <th scope="row">Alas Hak</th>
                        <td><%= bphtb?.alas_hak || '-' %></td>
                    </tr>
                    <tr>
                        <th scope="row">No Alas Hak</th>
                        <td><%= bphtb?.no_alas_hak || '-' %></td>
                    </tr>
                    <tr>
                        <th scope="row">Wajib Pajak</th>
                        <td><%= bphtb?.wajib_pajak || '-' %></td>
                    </tr>
                    <tr>
                        <th scope="row">Hasil Survei</th>
                        <td>Rp.<%= bphtb?.hasil_survei.toLocaleString() || '-' %></td>
                    </tr>
                    <tr>
                        <th scope="row">Tanggal Survei</th>
                        <td><%= bphtb?.tgl_survei || '-' %></td>
                    </tr>
                    <tr>
                        <th scope="row">Perintah Bayar</th>
                        <td>
                            <% if (bphtb?.perintah_bayar) { %>
                                <span class="badge bg-success">Ya</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Belum</span>
                            <% } %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Lunas</th>
                        <td>
                            <% if (bphtb?.lunas) { %>
                                <span class="badge bg-success">Lunas</span>
                            <% } else { %>
                                <span class="badge bg-danger">Belum</span>
                            <% } %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Status</th>
                        <td><%= bphtb?.status || '-' %></td>
                    </tr>
                    <tr>
                        <th scope="row">Selesai</th>
                        <td>
                            <% if (bphtb?.selesai) { %>
                                <span class="badge bg-success">Selesai</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Belum</span>
                            <% } %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Dibuat</th>
                        <td><%= bphtb?.created_at || '-' %></td>
                    </tr>
                    <tr>
                        <th scope="row">Diupdate</th>
                        <td><%= bphtb?.updated_at || '-' %></td>
                    </tr>
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="/bphtb/form?id=<%=bphtb?.id%>" class="btn btn-primary">Edit</a>
                    <form action="/bphtb/form/delete?id=<%= bphtb?.id %>" onsubmit="return confirm('Are you sure you want to delete this object')" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Hapus</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>