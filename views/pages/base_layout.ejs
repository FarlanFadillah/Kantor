<!-- linear-gradient(135deg, #1f2937, #111827); old background color -->
<!-- Sidepanel -->
<div class="offcanvas offcanvas-start d-flex flex-column text-white shadow-lg" tabindex="-1" id="sidePanel" 
     style="background: rgb(5, 6, 43)">
  
  <div class="offcanvas-header border-bottom border-secondary">
    <h5 class="offcanvas-title fw-bold">Menu</h5>
    <button class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
  </div>

  <div class="offcanvas-body d-flex flex-column">
    <!-- menu -->
    <ul class="nav flex-column gap-2">
      <li><a href="/admin/dashboard" class="menu-btn">Dashboard</a></li>
      <li><a href="/client/list" class="menu-btn">Clients</a></li>
