      <li><a href="/pbb/list" class="menu-btn">PBB/SKNJOP</a></li>
    </ul>

    <!-- logout button at bottom -->
    <div class="mt-auto border-top border-secondary pt-3">
        <a href="/auth/register" class="btn btn-primary w-100 mb-2">Register</a>
        <button class="logout-btn w-100" form="logout_form">Logout</button>
        <form id="logout_form" action="/auth/logout" method="POST" style="display:inline;"></form>
    </div>
  </div>
</div>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>   
