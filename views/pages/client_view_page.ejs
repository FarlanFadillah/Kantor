<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="bg-light">

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Detail Client</h1>
        <div>
            <a href="/admin/dashboard" class="btn btn-outline-primary">
                ‚Üê Back to Dashboard
            </a>
            <a href="/client/list?currentPage=1" class="btn btn-outline-primary me-2">Client List</a>
            <a href="/client/edit?id=<%=client_data.id%>" class="btn btn-warning me-2">Edit</a>
            <form action="/clients/<%= client_data.nik %>?_method=DELETE" method="POST" class="d-inline">
                <button disabled type="submit" class="btn btn-danger" onclick="return confirm('Hapus client ini?')">Hapus</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3"><strong><%= client_data.first_name %> <%= client_data.last_name || '' %></strong></h5>

            <dl class="row mb-0">
                <dt class="col-sm-4">NIK</dt>
                <dd class="col-sm-8"><%= client_data.nik %></dd>

                <dt class="col-sm-4">Tempat, Tanggal Lahir</dt>
                <dd class="col-sm-8"><%= client_data.birth_place %>, <%= client_data.birth_date %></dd>

                <dt class="col-sm-4">Pekerjaan</dt>
                <dd class="col-sm-8"><%- client_data.job_name %></dd>

                <dt class="col-sm-4">Status Perkawinan</dt>
                <dd class="col-sm-8"><%= client_data.marriage_status %></dd>

                <dt class="col-sm-4">Jenis Kelamin</dt>
                <dd class="col-sm-8"><%= client_data.gender %></dd>

                <dt class="col-sm-12"><h5 class="mt-3">Alamat</h5></dt>

                <dt class="col-sm-4">Jalan</dt>
                <dd class="col-sm-8"><%=client_data.jalan%></dd>

                <dt class="col-sm-4">RT/RW</dt>
                <dd class="col-sm-8"><%=client_data.rt || '000'%>/<%=client_data.rw || '000'%></dd>


                <dt class="col-sm-4">Kelurahan</dt>
                <dd class="col-sm-8"><%= client_data.kel %></dd>

                <dt class="col-sm-4">Kecamatan</dt>
                <dd class="col-sm-8"><%= client_data.kec %></dd>

                <dt class="col-sm-4">Kab/Kota</dt>
                <dd class="col-sm-8"><%= client_data.kab_kota %></dd>

                <dt class="col-sm-4">Provinsi</dt>
                <dd class="col-sm-8"><%= client_data.provinsi %></dd>

                <dt class="col-sm-4">No. Telepon</dt>
                <dd class="col-sm-8"><%= client_data.phone_number %></dd>
            </dl>

            <hr>

            <p class="mb-1 text-muted"><small>Ditambahkan:
                    <%= client_data.added_at ? client_data.added_at.toLocaleString() : '-' %>
                </small></p>
            <p class="mb-0 text-muted"><small>Terakhir Diupdate:
                    <%= client_data.updated_at ? client_data.updated_at.toLocaleString() : '-' %>
                </small></p>
        </div>
    </div>

</div>

</body>
</html>
