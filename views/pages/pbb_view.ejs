<% layout('pages/base_layout') %>
<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1>Detail PBB SKNJOP</h1>

            <dl class="row">

                <dt class="col-sm-3">NOP</dt>
                <dd class="col-sm-9"><%= pbb.nop || '-' %></dd>

                <dt class="col-sm-3">Provinsi</dt>
                <dd class="col-sm-9"><%= pbb.provinsi %></dd>

                <dt class="col-sm-3">Kabupaten/Kota</dt>
                <dd class="col-sm-9"><%= pbb.kab_kota %></dd>

                <dt class="col-sm-3">Kecamatan</dt>
                <dd class="col-sm-9"><%= pbb.kec %></dd>

                <dt class="col-sm-3">Kelurahan</dt>
                <dd class="col-sm-9"><%= pbb.kel %></dd>

                <dt class="col-sm-3">Jorong</dt>
                <dd class="col-sm-9"><%= pbb.jor || '-' %></dd>

                <dt class="col-sm-3">Luas Tanah (m²)</dt>
                <dd class="col-sm-9"><%= pbb.luas_tanah || 0 %></dd>

                <dt class="col-sm-3">Luas Bangunan (m²)</dt>
                <dd class="col-sm-9"><%= pbb.luas_bangunan || 0 %></dd>

                <dt class="col-sm-3">NJOP</dt>
                <dd class="col-sm-9"><%= pbb.njop ? pbb.njop.toLocaleString() : '-' %></dd>

                <dt class="col-sm-3">Client</dt>
                <% if (pbb.client_id) { %>
                    <dd class="col-sm-9">
                        <a href="/client/view?id=<%= pbb.client?.id %>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                            <%= pbb.client?.first_name %> <%= pbb.client?.last_name || '' %>
                        </a>
                    </dd>
                <% } else { %>
                    <dd class="col-sm-9">-</dd>
                <% } %>

                <dt class="col-sm-3">Alas Hak</dt>
                <% if (pbb.alas_hak?.id) { %>
                    <dd class="col-sm-9">
                        <a href="/alas_hak/view?id=<%= pbb.alas_hak?.id %>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                            <%= pbb.alas_hak?.no_alas_hak %> / <%= pbb.alas_hak?.kel%>
                        </a>
                    </dd>
                <% } else { %>
                    <dd class="col-sm-9">-</dd>
                <% } %>

            </dl>

            <p class="mb-1 text-muted">
                <small>Ditambahkan: <%= pbb.added_at || '-' %></small>
            </p>
            <p class="mb-0 text-muted">
                <small>Terakhir Diupdate: <%= pbb.updated_at || '-' %></small>
            </p>

            <div class="mt-3">
                <a href="/pbb/form?id=<%= pbb.id %>" class="btn btn-primary">Edit</a>
                <form action="/pbb/delete?id=<%= pbb.id %>" 
                      onsubmit="return confirm('Are you sure you want to delete this record?')" 
                      method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Hapus</button>
                </form>
            </div>

        </div>
    </div>
</div>
