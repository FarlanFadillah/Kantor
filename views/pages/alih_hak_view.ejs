<% layout('pages/base_layout') %>
<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
          <h1>Detail Alih Hak</h1>

          <dl class="row">

            <dt class="col-sm-3">No Akta</dt>
            <dd class="col-sm-9"><%= alih_hak.no_akta %></dd>

            <dt class="col-sm-3">Tanggal Akta</dt>
            <dd class="col-sm-9"><%= alih_hak.tgl_akta ? alih_hak.tgl_akta.toLocaleString() : '-' %></dd>

            <dt class="col-sm-3">Produk</dt>
            <dd class="col-sm-9"><%= alih_hak.produk %></dd>

            <dt class="col-sm-3">Alas Hak</dt>
            <dd class="col-sm-9">
                <% if(alih_hak.alas_hak) {%>
                    <a href="/alas_hak/view?id=<%=alih_hak.alas_hak.id%>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                        <%=alih_hak.alas_hak.no_alas_hak%>/<%=alih_hak.alas_hak.kel%>
                    </a>
                <% } %>
            </dd>

            <dt class="col-sm-3">BPHTB</dt>
            <dd class="col-sm-9">
                <% if(alih_hak.bphtb) {%>
                    <a href="/bphtb/view?id=<%=alih_hak.bphtb.id%>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                        <%=alih_hak.bphtb.nop%>/<%=alih_hak.bphtb.first_name%> <%=alih_hak.bphtb.last_name || ''%>
                    </a>
                <% } %>
            </dd>

            <dt class="col-sm-3">PBB / SKNJOP</dt>
            <dd class="col-sm-9">
                <% if(alih_hak.bphtb) {%>
                    <a href="/pbb/view?id=<%=alih_hak.bphtb.pbb_id%>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                        <%=alih_hak.bphtb.nop%>
                    </a>
                <% } %>
            </dd>

            <dt class="col-sm-3">Validasi PPH</dt>
            <dd class="col-sm-9">
                <% if (alih_hak?.pph) { %>
                    <span class="badge bg-success">Selesai</span>
                <% } else { %>
                    <span class="badge bg-secondary">Belum</span>
                <% } %> 
            </dd>

            <dt class="col-sm-3">Caking Alas Hak</dt>
            <dd class="col-sm-9">
                <% if (alih_hak?.ceking_shm) { %>
                    <span class="badge bg-success">Selesai</span>
                <% } else { %>
                    <span class="badge bg-secondary">Belum</span>
                <% } %>
            </dd> 

            <dt class="col-sm-3">ZNT Alas Hak</dt>
            <dd class="col-sm-9">
                <% if (alih_hak?.znt_shm) { %>
                    <span class="badge bg-success">Selesai</span>
                <% } else { %>
                    <span class="badge bg-secondary">Belum</span>
                <% } %>
            </dd> 

            <dt class="col-sm-3">Catatan</dt>
            <dd class="col-sm-9"><%= alih_hak.catatan %></dd>

            <dt class="col-sm-3">Pihak Penerima</dt>
            <% if(alih_hak.penerima_hak.length > 0) {%>
              <dd class="col-sm-9">
                <ul>
                  <% for(const owner of alih_hak.penerima_hak) {%>
                    <li><a href="/client/view?id=<%= owner.id %>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                      <%=owner.first_name%> <%= owner?.last_name || '' %>
                    </a></li>
                  <% } %>
                </ul>
              </dd>
            <% } else {%>
                <dd class="col-sm-9">-</dd>
            <% } %>

            <dt class="col-sm-3">Pihak Persetujuan</dt>
            <% if(alih_hak.pihak_persetujuan.length > 0) {%>
              <dd class="col-sm-9">
                <ul>
                  <% for(const owner of alih_hak.pihak_persetujuan) {%>
                    <li><a href="/client/view?id=<%= owner.id %>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                      <%=owner.first_name%> <%= owner?.last_name || '' %>
                    </a></li>
                  <% } %>
                </ul>
              </dd>
            <% } else {%>
                <dd class="col-sm-9">-</dd>
            <% } %>

            <dt class="col-sm-3">Pihak Kuasa Pemberi</dt>
            <% if(alih_hak.kuasa_pemberi.length > 0) {%>
              <dd class="col-sm-9">
                <ul>
                  <% for(const owner of alih_hak.kuasa_pemberi) {%>
                    <li><a href="/client/view?id=<%= owner.id %>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                      <%=owner.first_name%> <%= owner?.last_name || '' %>
                    </a></li>
                  <% } %>
                </ul>
              </dd>
            <% } else {%>
                <dd class="col-sm-9">-</dd>
            <% } %>

            <dt class="col-sm-3">Pihak Kuasa Penerima</dt>
            <% if(alih_hak.kuasa_penerima.length > 0) {%>
              <dd class="col-sm-9">
                <ul>
                  <% for(const owner of alih_hak.kuasa_penerima) {%>
                    <li><a href="/client/view?id=<%= owner.id %>" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                      <%=owner.first_name%> <%= owner?.last_name || '' %>
                    </a></li>
                  <% } %>
                </ul>
              </dd>
            <% } else {%>
                <dd class="col-sm-9">-</dd>
            <% } %>

          </dl>
            <p class="mb-1 text-muted"><small>Ditambahkan:
                    <%= alih_hak.added_at ? alih_hak.added_at : '-' %>
                </small></p>
            <p class="mb-0 text-muted"><small>Terakhir Diupdate:
                    <%= alih_hak.updated_at ? alih_hak.updated_at : '-' %>
                </small></p>

            <div class="mt-3">
                <a href="/alih_hak/form?id=<%=alih_hak?.id%>" class="btn btn-primary">Edit</a>
                <form action="/alih_hak/delete?id=<%= alih_hak?.id %>" onsubmit="return confirm('Are you sure you want to delete this object')" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Hapus</button>
                </form>
            </div>    
        </div>
    </div>
</div>

