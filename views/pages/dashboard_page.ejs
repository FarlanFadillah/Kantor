<% layout('pages/base_layout') %>
<div class="container mt-5">
    <h1 class="mb-4 fw-bold text-center text-primary">Admin Dashboard</h1>

    <!-- Dashboard Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 hover-card text-center text-white" style="background: linear-gradient(135deg, #3b82f6, #1d4ed8);">
                <a href="/client/list?currentPage=1" class="card-body text-decoration-none text-reset">
                    <h5 class="card-title fw-semibold text-white">Clients</h5>
                    <p class="card-text fs-3 fw-bold text-white"><%=total_clients%></p>
                </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 hover-card text-center text-white" style="background: linear-gradient(135deg, #10b981, #059669);">
                <a href="/alas_hak/list" class="card-body text-decoration-none text-reset">
                    <h5 class="card-title fw-semibold text-white">Alas Hak</h5>
                    <p class="card-text fs-3 fw-bold text-white"><%=total_alas_hak%></p>
                </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 hover-card text-center text-white" style="background: linear-gradient(135deg, #10b981, #059669);">
                <a href="/pbb/list" class="card-body text-decoration-none text-reset">
                    <h5 class="card-title fw-semibold text-white">PBB/SKNJOP</h5>
                    <p class="card-text fs-3 fw-bold text-white"><%= total_pbb %></p>
                </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 hover-card text-center text-white" style="background: linear-gradient(135deg, #ef4444, #b91c1c);">
                <div class="card-body">
                    <h5 class="card-title fw-semibold text-white">-</h5>
                    <p class="card-text fs-3 fw-bold text-white">...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex flex-wrap gap-3 mb-4">
        <a href="/bphtb/form" class="btn btn-success shadow-sm fw-semibold px-4 py-2 rounded-pill">
            + Tambah Data BPTHB
        </a>
        <a href="/client/form" class="btn btn-success shadow-sm fw-semibold px-4 py-2 rounded-pill">
            + Tambah Data Client
        </a>
        <a href="/alas_hak/form" class="btn btn-success shadow-sm fw-semibold px-4 py-2 rounded-pill">
            + Tambah Data Alas Hak
        </a>
        <a href="/alih_hak/form" class="btn btn-success shadow-sm fw-semibold px-4 py-2 rounded-pill">
            + Tambah Data Alih Hak
        </a>
    </div>

    <!-- Table -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <%-include('../partials/bphtb_table')%>
        </div>
    </div>
</div>
