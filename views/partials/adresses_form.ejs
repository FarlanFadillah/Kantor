<% layout('pages/base_layout', {title:'Address Form'}) %>
<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="card-title mb-3">Address Form</h3>
            <!-- Change action to your endpoint -->
            <form id="clientForm" action="/address/add" method="POST" novalidate>
                <div class="row g-3">
                    
                    <!-- Provinsi -->
                    <div class="col-12 col-md-6">
                        <label for="provinsi_option" class="form-label">Provinsi <span class="text-danger">*</span></label>
                        <select id="provinsi_option" name="provinsi" class="form-select" required>
                            <option value="" selected disabled>Pilih Provinsi</option>
                            <% for(const prov of provinsi.data) {%>
                                <option data-code="<%=prov.code%>" value="<%=prov.name || ''%>"><%=prov.name || ''%></option>
                            <% } %>
                        </select>
                    </div>

                    <!-- Kabupaten / Kota -->
                     <div class="col-12 col-md-6">
                        <label for="kab_kota_option" class="form-label">Kabupaten/Kota <span class="text-danger">*</span></label>
                        <select id="kab_kota_option" name="kab_kota" class="form-select" required disabled>
                            <option value="" selected disabled>Pilih Kabupaten / Kota</option>
                        </select>
                    </div>

                    <!-- Kecamatan -->
                     <div class="col-12 col-md-6">
                        <label for="kec_option" class="form-label">Kecamatan <span class="text-danger">*</span></label>
                        <select id="kec_option" name="kec" class="form-select" required disabled>
                            <option value="" selected disabled>Pilih Kecamatan</option>
                        </select>
                    </div>

                    <!-- Kelurahan -->
                    <div class="col-12 col-md-6">
                        <label for="kel_option" class="form-label">Kelurahan <span class="text-danger">*</span></label>
                        <select id="kel_option" name="kel" class="form-select" required disabled>
                            <option value="" selected disabled>Pilih Kelurahan</option>
                        </select>
                    </div>
                    
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                    <button type="reset" class="btn btn-outline-secondary">Reset</button>
                    <a href="/admin/dashboard" class="btn btn-outline-primary">
                        Dashboard
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/address_form.js"></script>

</div>